{
  "family": "backend",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "networkMode": "none",
  "containerDefinitions": [
    {
      "name": "ecs-webapp-backend",
      "image": "uri_of_image_in_ecr",
      "cpu": 1024,
      "memory": 2048,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "aws_db_instance.ecs_webapp_db.address"
        },
        {
          "name": "DB_NAME",
          "value": "aws_db_instance.ecs_webapp_db.db_name"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn_secret_manger_db_password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-webapp-backend",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "backend"
        }
      }
    }
  ]
}
